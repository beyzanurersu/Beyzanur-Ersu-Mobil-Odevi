<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    tools:context=".AddQuestionActivity">


    <EditText
        android:layout_gravity="center"
        android:hint="Soru No"
        android:id="@+id/soruno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/soru"
        android:hint="Soru"
        android:layout_width="300dp"
        android:layout_height="100dp"/>

    <EditText
        android:id="@+id/cevap1"
        android:hint="Cevap1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/cevap2"
        android:hint="Cevap2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/cevap3"
        android:hint="Cevap3"
        android:layout_width="300dp"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/cevap4"
        android:hint="Cevap4"
        android:layout_width="300dp"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/dogru_cevap"
        android:hint="Dogru cevap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/zorluk"
        android:hint="Zorluk (1-5)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/colorAccent"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:id="@+id/kaydet"
        android:text="Kaydet"
        android:layout_width="300dp"
        android:layout_height="60dp"/>


</LinearLayout>