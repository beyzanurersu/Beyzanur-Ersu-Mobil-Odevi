<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">


    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_süre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sınav süresi" />
        <SeekBar
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:id="@+id/süre_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="9"
            android:progress="9" />

        <TextView
            android:layout_marginTop="30dp"
            android:id="@+id/txt_zorluk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sınav Zorluk Düzeyi" />
        <SeekBar
            android:id="@+id/adet_bar"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="4"
            android:progress="3" />


        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sorular kaç puan" />

        <Spinner
            android:id="@+id/soru_puani"
            android:layout_width="200dp"
            android:layout_height="wrap_content" />

        <Button
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:background="@color/colorAccent"
            android:id="@+id/güncelle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Güncelle">

        </Button>


    </LinearLayout>

</LinearLayout>